#}
        </select>
    </label>
{% endblock %}


{# need variables : artistNames[] selectedArtist #}
{% block selectForArtist %}
    <label class="form-group">
        Artiste&nbsp;:
        <select name="artist" class="selectArtist">
            {% for name in artistNames %}
                <option value="{{ name }}" {% if name == selectedArtist %}selected{% endif %}>
                    {{ name }}
                </option>
            {% endfor %}

