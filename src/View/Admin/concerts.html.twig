                                  data-id-to-delete="{{ concert.Id }}"
                                  title="Supprimer ce concert (après confirmation)"
                                  data-infos-concert="{{ concert.Artist.Name }}, le {{ concert.DateAsString }} à {{ concert.hour }}">
