{% extends 'admin-layout.html.twig' %}

{% block content %}
    <div class="container">
        <form method="get">
            <label for="artistSelect">Artistes :</label>
            <select id="artistSelect" name="artistSelect">
                {% for artist in artists %}
                    <option value="{{ artist.id }}" name="artistId">{{ artist.name }}</option>
                {% endfor %}
            </select>
            <input type="submit" value="Modifier">
        </form>
        <hr>
        <div class="row">
            <form method="post">
                <div class="form-group">
                    <label for="name">Nom de l'artiste :</label>
                    <input type="text" value="{{ artistId.name }}" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="id_style">Style :</label>
                    <select id="id_style" name="id_style">
                        {% for style in styles %}
                            <option value="{{ style.id }}" name="id_style">{{ style.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="about">Description :</label>
                    <textarea name="about" id="about" class="col-md-4">{{ artistId.Description }}</textarea>
                </div>
                <img src="{{ artistId.ImageURL }}" class="img-thumbnail col-md-4">
                <div class="form-group">
                    <label for="img">Image :</label>
                    <input type="file" id="picture" name="picture">
                </div>
                <input type="submit" value="Enregistrer" id="submit" name="submit">
            </form>
        </div>
    </div>

{% endblock %}