                    {% endfor %}
                    <input type="submit" value="Se connecter" class="mt-5">
                </form>
            </div>
        </div>
        <div class="row">
            <img src="/assets/images/logo.png" alt="logo" class="mx-auto my-5">
        </div>
    </div>
{% endblock %}