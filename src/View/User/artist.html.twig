{% extends 'layout.html.twig' %}

{% block title %}Festizik - Les artistes {% endblock %}


{% block content %}
    <div class="container">
        <div class="artist-header">
            <h1>Les artistes</h1>
            <hr>
        </div>
        <div class="row">
            {% for artist in artists %}
                <figure class="artist col-md-4 col-6">
                    <h3>{{ artist.name }}</h3>
                    <img src="{{ artist.ImageURL }}">
                    <figcaption>
                        <p>{{ artist.Description }}</p>
                    </figcaption>
                </figure>
            {% endfor %}
        </div>

    </div>
{% endblock %}