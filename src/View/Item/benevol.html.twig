{% extends 'layout.html.twig' %}
{% block content %}

	<main>
		<div class="container" class="formBox">
			<h1>Want to be a Volonteer?</h1>
			<div class="column">
				<form method="post"> 
					<div class="form-group">
						<label for="name">Nom</label>
						<input type="text" class="form-control" name="name" placeholder="Nom">
					</div>
					<div class="form-group">
						<label for="surname">Prenom</label>
						<input type="text" name="surname" class="form-control" placeholder="Prenom">
					</div>
					<div class="form-group">
						<label>Telephone</label>
						<input type="tel" name="phone" class="form-control" placeholder="0797985423">
					</div>
					<h3>Periode de volontariat</h3>
					<div class="form-group">
						<label>Date de debut</label>
						<input type="date" name="dispoStart" max="3000-12-31" 
						        min="1000-01-01" class="form-control">
						<label >Date de fin</label>
						<input type="date" name="dispoEnd" min="1000-01-01"
						        max="3000-12-31" class="form-control">
					</div>
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>
	</main>

{% endblock %}